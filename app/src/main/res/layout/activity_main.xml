<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--    </android.opengl.GLSurfaceView>-->

    <com.kangwang.cramelibrary.glsurfaceview.GLCameraView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.kangwang.cramelibrary.glsurfaceview.GLCameraView>

    <LinearLayout
        android:background="@color/cardview_dark_background"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/openType"
            android:layout_marginRight="20dp"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@drawable/ic_edit_to_beauty">

        </Button>
        <Button
            android:id="@+id/paizhao"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/face_swap_camera_shot">

        </Button>
        <Button
            android:id="@+id/lvjing"
            android:layout_marginLeft="20dp"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@drawable/camera_btn_info"
            android:onClick="picture">

        </Button>
    </LinearLayout>
    <include layout="@layout/beat_type"
        android:id="@+id/beat_type"
        android:visibility="gone"
        android:layout_above="@id/layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"></include>

    <include layout="@layout/lvjing"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    </include>
</RelativeLayout>